{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "dist/**",
      "use": "@vercel/static"
    },
    {
      "src": "server/dist/**",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/server/(.*)", "dest": "server/dist/main.js" },
    { "src": "/favicon.ico", "dest": "dist/favicon.ico" },
    { "src": "/robots.txt", "dest": "dist/robots.txt" },
    { "src": "/(.*)", "dest": "dist/$1" }
  ]
}
